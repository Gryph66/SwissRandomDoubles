{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist-server",
    "rootDir": ".",
    "declaration": false,
    "resolveJsonModule": true
  },
  "include": ["server/**/*", "src/types.ts", "src/utils/pairingAlgorithm.ts"],
  "exclude": ["node_modules", "dist", "dist-server"]
}

