# Environment Variables

# Database
RAILWAY_VOLUME_MOUNT_PATH=/data
DATABASE_PATH=/data/tournaments.db

# Rate Limiting
ARCHIVE_RATE_LIMIT_PER_IP=5
MAX_TOURNAMENT_SIZE_KB=500
MAX_TOTAL_TOURNAMENTS=1000

# Expiration
TOURNAMENT_EXPIRATION_DAYS=90

# Server
PORT=3001
NODE_ENV=production

# Base URL for shareable links (set this to your Railway domain in production)
BASE_URL=https://your-app.railway.app
